<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IzmData">

    <EditText
        android:id="@+id/IzmName"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Имя"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SurCh" />

    <Button
        android:id="@+id/Sohr"
        android:layout_width="131dp"
        android:layout_height="51dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/buttonshare"
        android:backgroundTint="#D4F3FF"
        android:onClick="IzmTextFromSql"
        android:text="Сохранить"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IzmName" />

    <EditText
        android:id="@+id/SurCh"
        android:layout_width="282dp"
        android:layout_height="44dp"
        android:layout_marginTop="368dp"
        android:ems="10"
        android:hint="Фамилия"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageIzm"
        android:layout_width="353dp"
        android:layout_height="275dp"
        android:layout_marginTop="52dp"
        android:onClick="onClickChooseImage"
        android:src="@drawable/no_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="122dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/buttonshare"
        android:text="Отмена"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IzmName" />
</androidx.constraintlayout.widget.ConstraintLayout>